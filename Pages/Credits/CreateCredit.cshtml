@page
@model CreateCreditModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<form method="post" class="needs-validation" novalidate>

	<div class="form-group">
		<label for="creditValue">Credit Value</label>
		<input asp-for="Credit.Value" type="number" min="1" max="5" class="form-control" id="creditValue" style="width: 80px" required>
		<div class="invalid-feedback">
			Please provide a valid credit value.
		</div>
	</div>

	<div class="form-check">
		<input asp-for="Credit.Success" type="checkbox" class="form-check-input" id="creditSuccess">
		<label class="form-check-label" style="width: 80px" for="creditSuccess">Success</label>
	</div>

	<button type="submit" class="btn btn-primary" style="width: 80px">Send</button>

	<input asp-for="Credit.Created" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" type="hidden" />
</form>